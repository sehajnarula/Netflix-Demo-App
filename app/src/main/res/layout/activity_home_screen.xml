<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerlayoutparent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context=".HomeScreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/homepageparenttwo">
        <RelativeLayout
            android:id="@+id/headerscreen"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/navigationdrawericon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/baseline_navigation_drawer_24" />
            <TextView
                android:id="@+id/fragmentscreenname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fragmentviewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerscreen"
            android:layout_above="@id/navigatescreensbottom"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigatescreensbottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#4DD90808"
            app:itemTextColor="@drawable/item_icon"
            android:padding="5dp"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/item_icon"
            app:itemIconSize="24dp"
            app:itemTextAppearanceActive="@color/red"
            app:menu="@menu/homepage_bottomnav"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/drawernavigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@null">
            <include
                layout="@layout/navigation_drawerlayout"/>
        </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>