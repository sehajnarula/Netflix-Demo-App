<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginStart="5dp"
    app:cardBackgroundColor="#A6000000"
    android:layout_marginVertical="8dp"
    android:layout_marginEnd="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/viewmoremoviedetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/verticalviewmovieposter"
            android:layout_width="132dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/verticalviewtoptenlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textAlignment="center"
            android:layout_alignEnd="@id/verticalviewmovieposter"
            android:text="Top 10"
            android:background="@drawable/topten_bg"
            />
        <TextView
            android:id="@+id/verticalviewrecentlyaddedtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recentlyadded_backgrou"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/moviecastduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/viewmoremoviedetails">
            <TextView
                android:id="@+id/moviename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:maxLines="3"
                android:minLines="3"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/movieorshowtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/moviename"
                android:textColor="#A6FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/moviedesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieorshowtime"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:minLines="3"
                android:layout_marginHorizontal="13dp"
                android:textColor="#A6FFFFFF"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/verticalviewmoviedirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/moviedesc"
                android:textColor="#A6FFFFFF"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="13dp"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>