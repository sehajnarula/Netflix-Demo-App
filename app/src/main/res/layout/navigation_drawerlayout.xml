<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#87EE4B2B">
<RelativeLayout
    android:id="@+id/profiledetailsheader"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userprofileicon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profiledpiconnew"
        app:shapeAppearanceOverlay="@style/circularroundimage" />
    <TextView
    android:id="@+id/loggedinuserfirstname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="16sp"
    android:layout_toRightOf="@id/userprofileicon"
    android:layout_centerVertical="true"
    android:layout_above="@id/loggedinnumber"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:textColor="@color/black"/>
    <TextView
        android:id="@+id/loggedinnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/userprofileicon"
        android:textColor="#67000000"/>
</RelativeLayout>
    <View
        android:id="@+id/viewbelowprofiledetails"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#33000000"
        android:layout_below="@id/profiledetailsheader"/>
    <TextView
        android:id="@+id/addtitlescreentext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewbelowprofiledetails"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Add Title"/>
    <TextView
        android:id="@+id/addcategoryscreentext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addtitlescreentext"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="5dp"
        android:text="Add Category"/>
<!--<View-->
<!--    android:id="@+id/viewabovelogout"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="4dp"-->
<!--    android:background="#33000000"-->
<!--    android:layout_above="@id/logoutnavdrawer"/>-->
    <TextView
        android:id="@+id/logoutnavdrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Logout"
        android:drawableEnd="@drawable/baseline_logout_drawerlayout_24"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"/>
</RelativeLayout>