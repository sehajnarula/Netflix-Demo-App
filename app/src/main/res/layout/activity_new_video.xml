<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6000000"
    tools:context="com.demo.netflix.NewVideoActivity">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videoView"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controliconsparent"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/landscapecloseicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/baseline_arrow_back_videoplayer_24"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/landscaperewind"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/landscapeplay"
            android:src="@drawable/rewindtensmall"/>
        <ImageView
            android:id="@+id/landscapeplay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/landscapeforward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/baseline_forward_10_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/landscapeplay"/>
        <SeekBar
            android:id="@+id/landscapeseekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:progressTint="@color/red"
            android:thumbTint="@color/red"
            android:progressBackgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/zoomoutlandscapevideo"
            android:layout_marginBottom="20dp" />
        <ImageView
            android:id="@+id/zoomoutlandscapevideo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/baseline_zoom_out_map_24"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>